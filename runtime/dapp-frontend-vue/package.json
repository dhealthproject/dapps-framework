{
  "name": "@dhealthdapps/frontend",
  "version": "0.1.0",
  "homepage": "https://github.com/dhealthproject/dapps-framework/tree/main/runtime/dapp-frontend-vue#readme",
  "description": "dHealth dApps Frontend with Vue",
  "author": "dHealth Network <devs@dhealth.foundation>",
  "license": "LGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/dhealthproject/dapps-framework/issues"
  },
  "files": [
    "dist/*",
    "README.md",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "prettier": "prettier --check ./src ./tests",
    "lint:fix": "prettier --write ./src ./tests",
    "lint": "vue-cli-service lint && npm run prettier",
    "docs": "typedoc --out \"ts-docs/$(npm run version --silent)\" src/kernel src/views/MetaView.ts src/views/Assembler/Assembler.ts",
    "prebuild": "npm run lint",
    "build": "vue-cli-service build --target app",
    "build:watch": "vue-cli-service build --target app --watch",
    "test": "npm run test:unit",
    "test:unit": "vue-cli-service test:unit",
    "serve": "vue-cli-service serve"
  },
  "dependencies": {
    "@dhealth/components": "next",
    "@dhealth/qr-library": "~1.0.0",
    "@dhealth/sdk": "~1.0.3-alpha-202201201200",
    "crypto-browserify": "^3.12.0",
    "register-service-worker": "^1.7.2",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.0.24",
    "vue": "^2.6.14",
    "vue-meta": "^2.4.0",
    "vue-property-decorator": "9.1.2",
    "vue-router": "^3.5.4",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-pwa": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-unit-mocha": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^1.3.0",
    "bufferutil": "^4.0.6",
    "chai": "^4.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "prettier": "^2.4.1",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "ts-node": "^9.1.1",
    "typedoc": "^0.22.15",
    "typescript": "~4.5.5",
    "vue-class-component": "^7.2.3",
    "vue-cli-plugin-tailwind": "^3.0.0",
    "vue-template-compiler": "^2.7.5",
    "utf-8-validate": "^5.0.9",
    "webpack": "^5.73.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-console": "off",
      "no-debugger": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "vue/multi-word-component-names": "off"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "contributors": [
