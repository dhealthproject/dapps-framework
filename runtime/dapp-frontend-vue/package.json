    },
    {
      "name": "Komal Narwani",
      "email": "kn@dhealth.foundation"
    },
    {
      "name": "Paul Rieger",
      "email": "paul@dhealth.foundation"
    },
    {
      "name": "Vitaliy Kravchenko",
      "email": "vitaliy@dhealth.foundation"
    }
  ]
}
