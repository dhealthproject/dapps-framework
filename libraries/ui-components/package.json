{
  "name": "@dhealth/components",
  "version": "0.1.0",
  "homepage": "https://github.com/dhealthproject/ui-components#readme",
  "description": "Components Library for dApps Development with dHealth Network",
  "author": "dHealth Network <devs@dhealth.foundation>",
  "license": "LGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dhealthproject/ui-components.git"
  },
  "bugs": {
    "url": "https://github.com/dhealthproject/ui-components/issues"
  },
  "main": "dist/@dhealth/components.umd.js",
  "types": "dist/@dhealth/src/components.d.ts",
  "files": [
    "dist/*",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "prettier": "prettier --check ./src ./tests",
    "lint:fix": "prettier --write ./src ./tests",
    "lint": "vue-cli-service lint && npm run prettier",
    "docs": "typedoc --out \"ts-docs/$(npm run version --silent)\" src/classes.ts",
    "prebuild": "npm run lint",
    "build": "npm run build:lib && npm run build:ts",
    "build:lib": "vue-cli-service build --target lib --name dHealthComponents --filename @dhealth/components src/index.ts",
    "build:ts": "tsc --emitDeclarationOnly",
    "pretest": "npm run build",
    "test": "npm run test:unit",
    "test:unit": "vue-cli-service test:unit",
    "serve": "vue-cli-service serve"
  },
  "dependencies": {
    "tailwindcss": "^3.0.24",
    "vue": "^3.2.13",
    "vue-class-component": "^8.0.0-0",
    "vue-property-decorator": "10.0.0-rc.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-unit-mocha": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^2.0.0-0",
    "chai": "^4.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "prettier": "^2.4.1",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "ts-node": "^9.1.1",
    "typedoc": "^0.22.15",
    "typescript": "~4.5.5",
    "vue-cli-plugin-tailwind": "^3.0.0"
  },
  "peerDependencies": {
    "vue": "^3.2.13"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-console": "off",
      "no-debugger": "off",
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  }
}
